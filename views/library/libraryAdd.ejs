<html>
<head>
    <title>Add New Library</title>
</head>
<body>
    <h1>Add New Library</h1>
    <form action="/library/insert" method="get">
        Library Name: <input id="lib_name" name="lib_name" type="text" />
        <br />
        <br />

        Address
        <br />
        <select id="address_id" name="address_id" multiple="multiple">
            <% for(var i=0; address.length > i; i++ ) { %>
            <option value="<%= address[i].address_id %>"><%= address[i].street + ', ' + address[i].zipcode %></option>
            <% } %>
        </select>

        <!-- Initialize the multiselect plugin: -->
        <script type="text/javascript">
            $(document).ready(function() {
                $('#address_id').multiselect();
            });
        </script>


        <br />

        <input type="submit" />

    </form>
    <%- include("../includes/footer.ejs"); %>
</body>

</html>