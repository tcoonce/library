<html>
    <head>
        <title>Members</title>
    </head>
    <body>
        <h1>Members</h1>
        <a href="/member/add">Add New Member</a> <br />

        <br />

        <table border="1">
            <tr><th>First Name</th><th>Last Name</th><th>Email</th><th>Action</th></tr>
            <% for(var i=0; result.length > i; i++ ) { %>
            <tr>
                <td><a href="/member/?member_id=<%= result[i].member_id %>"><%= result[i].first_name %></a></td>
                <td><%= result[i].last_name %></td>
                <td><%= result[i].email %></td>
                <td>
                    <form action="/member/delete/">
                        <input type="hidden" name="member_id" id="member_id" value="<%= result[i].member_id %>" />
                        <input type="submit" value="Delete"/>
                    </form>
                </td>
            </tr>
            <% } %>
        </table>
    </body>

</html>