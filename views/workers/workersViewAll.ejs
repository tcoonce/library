<html>
    <head>
        <title>Workers</title>
    </head>
    <body>
        <h1>Workers</h1>
        <a href="/worker/add">Add New Worker</a> <br />

        <br />

        <table border="1">
            <tr><th>First Name</th><th>Last Name</th><th>Email</th><th>Action</th></tr>
            <% for(var i=0; result.length > i; i++ ) { %>
            <tr>
                <td><a href="/worker/?worker_id=<%= result[i].worker_id %>"><%= result[i].first_name %></a></td>
                <td><%= result[i].last_name %></td>
                <td><%= result[i].email %></td>
                <td><form action="/worker/delete/">
                        <input type="hidden" name="worker_id" id="worker_id" value="<%= result[i].worker_id %>" />
                        <input type="submit" value="Delete"/>
                    </form>
                </td>
            </tr>
            <% } %>
        </table>
    </body>

</html>